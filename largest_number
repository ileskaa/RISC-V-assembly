# write a subroutine (function), which, given 3 inputs, finds the largest of them
.text
    main:
        # enter the values to be compared to the following registers
        li a0, 1
        li a1, 2
        li a2, 4

        mv t1, ra

        jal ra, largest_int

        mv ra, t1 # restore the return address

        # print largest int
        li a7, 1 # call code 1 for int
        ecall

        jr ra # exit main

    largest_int:
        # check if the value in a0 is smaller than the value in a1.
        # If it is, t0 gets assigned a value of 1
        slt t0, a0, a1

        # the return value goes to the caller as the value of reg. a0

        jr ra # return to calling location